<div class="converter-container">
  <div class="converter-item converter-item">
    <div class="converter-item__header">
      <img src="<%= Routes.static_path(@socket, "/images/calculator.show/plane.svg") %>"/>
      </object>
      <div class="converter-item__details">
        <div class="converter-item__details-row">
          <div class="converter-item__details-name">
            Plane
          </div>
          <div class="converter-item__details-value">
            <%= to_int(@calculator.original_distance) %>
            km
          </div>
        </div>
        <div class="converter-item__details-row">
          <div class="converter-item__details-name converter-item__details-name--secondary">
            Compensated COÂ²
          </div>
          <div class="converter-item__details-value converter-item__details-value--secondary">
            <%= to_int(@calculator.original_co2 + @calculator.additional_co2) %>
            kg
          </div>
        </div>
      </div>
    </div>
    <div class="converter-item__examples">
      <div class="converter-item__examples-row">
        <div class="converter-item__examples-from">
          <%= @calculator.original_city_from %>
        </div>
        <div class="converter-item__examples-indicator">
          <img src="<%= Routes.static_path(@socket, "/images/calculator.show/indicator-plane.svg") %>"/>
        </div>
        <div class="converter-item__examples-to">
          <%= @calculator.original_city_to %>
        </div>
      </div>
      <%= if @calculator.additional_co2 > 0 do %>
        <div class="converter-item__examples-row converter-item__examples-row__additional">
          <div class="converter-item__examples-from">
            <%= @calculator.additional_city_from %>
          </div>
          <div class="converter-item__examples-indicator">
            <img src="<%= Routes.static_path(@socket, "/images/calculator.show/indicator-plane.svg") %>"/>
          </div>
          <div class="converter-item__examples-to">
            <%= @calculator.additional_city_to %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
